<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/InitialLogin">

    <fragment
        android:id="@+id/LoginActivity"
        android:name="com.example.sosalud.view.LoginActivity"
        android:label="@string/login_label"
        tools:layout="@layout/fragment_login">
        <argument
            android:name="letter"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/InitialLogin"
        android:name="com.example.sosalud.view.InitialFragment"
        android:label="@string/app_name"
        tools:layout="@layout/initial_activity">
        <action
            android:id="@+id/action_InitialLogin_to_sdfa"
            app:destination="@id/sdfa" />
    </fragment>

    <fragment
        android:id="@+id/sdfa"
        android:name="com.example.sosalud.view.InitialFragment"
        android:label="@string/login_label"
        tools:layout="@layout/initial_activity">
        <argument
            android:name="letter"
            app:argType="string" />
        <action
            android:id="@+id/action_sdfa_to_LoginActivity"
            app:destination="@id/LoginActivity" />
    </fragment>
</navigation>